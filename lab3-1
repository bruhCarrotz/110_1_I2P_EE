#include <stdio.h>

int main(){
  int num;
  scanf("%d", &num);

  int x = num-1;
  for (int i=1 ; i<=num ; i++){
    for (int j=1 ; j<=x ; j++){
      printf(" ");
    }
    
    x -= 1;
    printf("%d", i);

    for (int j=1 ; j<i ; j++){
      printf(" %d", i);
    }
    printf("\n");
  }

  return 0;
}
